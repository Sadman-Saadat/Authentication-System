<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    
                        <h2>Programming Contest <small>Edit Participant Team's Details </small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                   

                    <% let success= 'Team updated successfully!'%>
                    <% if (error.length>0) {if (error==success){%>
                    <div class="alert alert-success"><%=error%></div>
                    <%}else{%>
                    <div class="alert alert-danger"><%=error%></div> 
                    <%}%> <%}%>

                    <div class="x_content">
                        <form method="POST" action="ProgrammingContest/editparticipant/<%=team._id%>" id="demo-form2" data-parsley-validate
                            class="form-horizontal form-label-left">
                            <div class="row">
                                <div class="col-md-4 col-sm-12  form-group">
                                    <input type="text" placeholder="Team Name" value="<%=team.teamname%>" id="teamname" name="teamname" required="required" class="form-control">
                                </div>
                                <div class="col-md-4 col-sm-12  form-group">
                                    <input type="text" placeholder="Institution Name" value="<%=team.institutename%>" id="institute" name="institute" required="required" class="form-control">
                                </div>
                            </div>
                            <h2>Information Regarding the Coach</h2>
                            <div class="row">
                                <div class="col-md-4 col-sm-12  form-group">
                                    <input type="text" placeholder="Name of the Coach" value="<%=team.coachname%>" id="coachname" name="coachname" required="required" class="form-control">
                                </div>
                                <div class="col-md-4 col-sm-12  form-group">
                                    <input type="text" placeholder="Contact No. of the Coach" value="<%=team.coachcontact%>" id="coachcontact" name="coachcontact" required="required" class="form-control">
                                </div>
                                <div class="col-md-4 col-sm-12  form-group">
                                    <input type="text" placeholder="E-mail of the Coach" value="<%=team.coachmail%>" id="coachmail" name="coachmail" required="required" class="form-control">
