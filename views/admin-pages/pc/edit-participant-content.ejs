                                <div class="col-md-4 col-sm-12  form-group">
                                    <input type="text" placeholder="E-mail of Member - 2" value="<%=team.mem2mail%>" id="mem2mail" name="mem2mail" required="required" class="form-control">
                                </div>
                                <label class="col-form-label"><b>T-Shirt Size of Member - 2</b></label><br>
                                <div class="col-md-4 col-sm-12  form-group">
                                    <select class="form-control" id="mem2shirt" name="mem2shirt" required="required" >
                                        <option value="<%=team.mem2shirt%>"><%=team.mem2shirt%></option>
                                        <option value="M">Medium</option>
                                        <option value="L">Large</option>
                                        <option value="XL">Extra Large</option>
                                    </select>
                                </div>
