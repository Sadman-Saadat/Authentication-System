                                    <input type="text" placeholder="Name of Member - 1" value="<%=team.mem1name%>" id="mem1name" name="mem1name" required="required" class="form-control">
                                </div>
                                <div class="col-md-4 col-sm-12  form-group">
                                    <input type="text" placeholder="Contact No. of Member - 1" value="<%=team.mem1contact%>" id="mem1contact" name="mem1contact" required="required" class="form-control">
