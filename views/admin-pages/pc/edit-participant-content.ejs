                                <label class="col-form-label"><b>T-Shirt Size of the Team Leader</b></label><br>
                                <div class="col-md-4 col-sm-12  form-group">
                                    <select class="form-control" value="<%=team.leadershirt%>" id="leadershirt" name="leadershirt" required="required">
                                        <option value="<%=team.leadershirt%>"><%=team.leadershirt%></option>
                                        <option value="M">Medium</option>
                                        <option value="L">Large</option>
                                        <option value="XL">Extra Large</option>
                                    </select>
                                </div>
                            </div>

                            <br />
